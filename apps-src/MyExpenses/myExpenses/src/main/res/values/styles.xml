<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <style name="headingStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <!-- <item name="android:textAllCaps">true</item> -->
        <item name="android:textColor">?colorAccent</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
    </style>

    <style name="headingStyle.WithMargin">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="headingStyle.WithMargin.Caps">
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="newHeadingStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">?android:textAppearance</item>
    </style>

    <style name="about_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorLink">@drawable/linkcolor</item>
    </style>

    <style name="FormLabelBase">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="FormLabel" parent="FormLabelBase">
        <item name="android:paddingRight">12dp</item>
    </style>

    <style name="FormField">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">@dimen/form_table_ratio</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="FormField.Dialog">
        <item name="android:layout_weight">2</item>
    </style>

    <style name="FormLabel.Condensed">
        <item name="android:minHeight">0dp</item>
    </style>

    <style name="dialog_text" />

    <style name="dialog_text.bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="titleTextStyle">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="titleTextStyleMedium" parent="titleTextStyle">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <style name="Divider">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="SmallButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAppearance">@style/SmallButtonTextAppearance</item>
        <item name="strokeColor">?colorPrimary</item>
    </style>

    <style name="SmallButtonTextAppearance" parent="@style/TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">@dimen/textSizeLabel</item>
    </style>

    <style name="SwitchTextAppearance" parent="@style/TextAppearance.AppCompat.Widget.Switch">
        <!-- the switch color is set to contrast with the window background, hence we need inverse text color -->
        <item name="android:textColor">?android:textColorPrimaryInverse</item>
        <item name="android:textSize">@dimen/textSizeSmall</item>
    </style>

    <style name="ExpandableListRowWithCustomIndicator">
        <item name="android:paddingRight">@dimen/general_padding</item>
        <item name="android:paddingLeft">@dimen/general_padding</item>
    </style>

    <style name="ExpandableListRow">
        <item name="android:paddingRight">@dimen/general_padding</item>
        <item name="android:paddingLeft">?android:attr/expandableListPreferredItemPaddingLeft</item>
    </style>

    <style name="MyAlertDialogTheme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorPrimary">@color/colorPrimaryDialog</item>
        <item name="colorAccent">@color/colorPrimaryDialog</item>
        <item name="colorError">@color/colorErrorDialog</item>
    </style>

    <style name="CaldroidCustomBase" parent="@style/CaldroidDefault" />

    <style name="CaldroidCustom" parent="CaldroidCustomBase">
        <item name="styleCaldroidGridView">@style/CaldroidCustomGridView</item>
    </style>

    <style name="CaldroidCustomGridView">
        <item name="android:drawSelectorOnTop">true</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:background">@color/caldroid_custom_gridview_background</item>
        <item name="android:horizontalSpacing">1dp</item>
        <item name="android:padding">1dp</item>
        <item name="android:verticalSpacing">1dp</item>
    </style>

    <style name="MySpinnerItemStyle" parent="@style/Widget.AppCompat.TextView.SpinnerItem">
        <item name="android:minHeight">@dimen/accessibility_clickable_minimum</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="CalculatorButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:minHeight">@dimen/calculator_button_min</item>
        <item name="android:minWidth">@dimen/calculator_button_min</item>
        <item name="android:textSize">@dimen/calculator_button_text_size</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/calculator_button_layout_margin</item>
    </style>

    <style name="CalculatorButton.Dot">
        <item name="android:contentDescription">@string/decimal_separator</item>
    </style>

    <style name="CalculatorButton.Add">
        <item name="android:text">@string/calculator_operator_plus</item>
    </style>

    <style name="CalculatorButton.Subtract">
        <item name="android:text">@string/calculator_operator_minus</item>
    </style>

    <style name="CalculatorButton.Multiply">
        <item name="android:text">@string/calculator_operator_multiply</item>
    </style>

    <style name="CalculatorButton.Divide">
        <item name="android:text">@string/calculator_operator_divide</item>
    </style>

    <style name="CalculatorButton.PlusMinus">
        <item name="android:text">Â±</item>
    </style>

    <style name="CalculatorButton.Clear">
        <item name="android:textColor">#f26522</item>
        <item name="android:textStyle">bold</item>
        <item name="android:text">C</item>
        <item name="android:contentDescription">
            @string/content_description_calculator_clear_button
        </item>
    </style>

    <style name="CalculatorButton.Delete">
        <item name="android:text">&lt;</item>
        <item name="android:contentDescription">
            @string/content_description_calculator_delete_button
        </item>
    </style>

    <style name="CalculatorButton.Result">
        <item name="android:textColor">#39b54a</item>
        <item name="android:textStyle">bold</item>
        <item name="android:text">=</item>
    </style>

    <style name="LicenceLabel">
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="LicencePrice">
        <item name="android:textAppearance">@style/AdaptiveLabelTextAppearance</item>
    </style>

    <style name="SelectLicenceButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:theme">@style/SelectLicenceButtonTheme</item>
    </style>

    <style name="SelectLicenceButtonTheme">
        <item name="colorControlActivated">?android:textColorPrimary</item>
    </style>

    <style name="FeatureList">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/general_padding</item>
        <item name="android:paddingRight">@dimen/general_padding</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:textColor">?android:textColorTertiary</item>
    </style>

    <style name="ContribDialogTheme">
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarNeutralButtonStyle">@style/NegativeButtonStyle</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/material_grey</item>
    </style>

    <style name="OnboardingInputLabel">
        <item name="android:textAppearance">@style/AdaptiveLabelTextAppearance</item>
        <item name="android:layout_marginTop">@dimen/suw_description_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/suw_description_margin_bottom</item>
    </style>

    <style name="AdaptiveLabelTextAppearance" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">@dimen/textSizeLabel</item>
    </style>

    <style name="MyTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox" />

    <style name="AdaptiveHintTextAppearance" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">@dimen/textSizeLabel</item>
    </style>

    <style name="OnBoardingDisplayProperty">
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="OnboardingSpinner">
        <item name="android:layout_marginLeft">-8dp</item>
    </style>

    <style name="BudgetButton" parent="Widget.AppCompat.Button">
        <item name="android:minWidth">0dip</item>
        <item name="android:padding">@dimen/budget_table_padding</item>
        <item name="android:focusable">false</item>
    </style>

    <style name="ReccurrenceRowReccurence">
        <item name="android:layout_width">match_parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
    </style>

    <style name="ReccurenceRowDateButton" parent="SmallButton">
        <item name="layout_constraintHorizontal_chainStyle">spread</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintTop_toBottomOf">@id/Recurrence</item>
    </style>

    <style name="ReccurrenceRowToggleButton">
        <item name="layout_constraintTop_toBottomOf">@id/Recurrence</item>
    </style>

    <style name="AppTheme.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="titleTextAppearance">@style/ToolbarTitleTextAppearance</item>
        <item name="subtitleTextAppearance">@style/ToolbarSubtitleTextAppearance</item>
    </style>

    <style name="ToolbarTitleTextAppearance" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize" tools:ignore="SpUsage">20dp</item>
    </style>

    <style name="ToolbarSubtitleTextAppearance" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize" tools:ignore="SpUsage">16dp</item>
    </style>

    <style name="SimpleDialog" parent="MyAlertDialogTheme">
        <item name="textInputStyle">@style/SimpleDialogTextInputStyle</item>
    </style>

    <style name="SimpleDialogTextInputStyle" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="endIconMode">none</item>
    </style>
</resources>
