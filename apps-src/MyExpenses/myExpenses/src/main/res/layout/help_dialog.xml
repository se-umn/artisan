<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/aboutscrollview"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:paddingTop="@dimen/padding_dialog_content_top">

    <LinearLayout
        android:id="@+id/help"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/padding_dialog_side"
        android:paddingRight="@dimen/padding_dialog_side">

        <TextView
            android:id="@+id/screen_info"
            style="@style/about_text"/>

        <TextView
            android:id="@+id/form_fields_heading"
            style="@style/headingStyle.WithMargin"
            android:text="@string/help_form_fields"/>

        <LinearLayout
            android:id="@+id/form_fields_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"/>

        <TextView
            android:id="@+id/menu_commands_heading"
            style="@style/headingStyle.WithMargin"
            android:text="@string/help_menu_commands"/>

        <LinearLayout
            android:id="@+id/menu_commands_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"/>

        <TextView
            android:id="@+id/cab_commands_heading"
            style="@style/headingStyle.WithMargin"
            android:text="@string/help_contextual_actions"/>

        <TextView
            android:id="@+id/cab_commands_help"
            style="@style/about_text"
            android:layout_marginBottom="8dp"
            android:text="@string/help_contextual_actions_help"/>

        <LinearLayout
            android:id="@+id/cab_commands_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"/>

    </LinearLayout>
</ScrollView>

