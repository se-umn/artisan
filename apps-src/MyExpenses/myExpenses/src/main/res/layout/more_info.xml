<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/aboutscrollview"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:paddingTop="@dimen/padding_dialog_content_top">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/padding_dialog_side"
        android:paddingRight="@dimen/padding_dialog_side">

        <TextView
            android:id="@+id/aboutVersionCode"
            style="@style/about_text"/>
        <!-- Licence -->
        <TextView
            style="@style/headingStyle.WithMargin.Caps"
            android:text="@string/help_heading_license"/>

        <TextView
            android:id="@+id/help_licence_gpl"
            style="@style/about_text"
            android:text="@string/help_licence_gpl"/>

        <!--  Credits -->
        <TextView
            style="@style/headingStyle.WithMargin.Caps"
            android:text="@string/help_heading_credits"/>

        <TextView
            android:id="@+id/project_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!--  AND -->
        <TextView
            style="@style/headingStyle.WithMargin.Caps"
            android:text="@string/and"/>

        <TextView
            android:id="@+id/additional_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            style="@style/headingStyle.WithMargin.Caps"
            android:text="Icons from the Noun Project (Creative Commons CCBY)"/>

        <LinearLayout
            android:id="@+id/additional_icons_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"/>

        <TextView
            style="@style/about_text"
            android:text="Â© 2011 - 2019 Michael Totschnig"/>

    </LinearLayout>
</ScrollView>

