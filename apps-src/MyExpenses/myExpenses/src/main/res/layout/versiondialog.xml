<LinearLayout android:id="@+id/layoutMain"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:paddingTop="@dimen/padding_dialog_content_top"
              android:paddingLeft="@dimen/padding_dialog_side"
              android:paddingRight="@dimen/padding_dialog_side">

    <TextView
        android:id="@+id/ImportantUpgradeInfoHeading"
        style="@style/headingStyle.WithMargin"
        android:text="@string/important_upgrade_information_heading"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/ImportantUpgradeInfoBody"
        style="@style/about_text"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/ImportantUpgradeInfoLearnMore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:gravity="end"
        android:textColorLink="@drawable/linkcolor"
        android:textStyle="bold|italic"
        android:focusable="true"
        android:visibility="gone"/>


    <ListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:drawSelectorOnTop="false"
        android:listSelector="@android:color/transparent"/>
</LinearLayout>

