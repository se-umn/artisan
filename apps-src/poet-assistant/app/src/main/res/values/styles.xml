<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="alertDialogTheme">@style/AppAlertDialog</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="textAppearancePopupMenuHeader">@style/AppPopupMenuHeader</item>

    </style>

    <style name="AppTheme" parent="AppBaseTheme">
        <item name="preferenceTheme">@style/AppPreferenceTheme</item>
    </style>

    <style name="AppPreferenceTheme" parent="@style/PreferenceThemeOverlay">
        <item name="android:textAppearanceMedium">?android:attr/textAppearanceListItem</item>
    </style>

    <style name="AppTheme.Settings">
        <item name="colorAccent">@color/dialog_accent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.TextAppearance.Design.Tab" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/tab_text_size</item>
    </style>

    <style name="AppTheme.SearchViewStyle" parent="Widget.AppCompat.SearchView.ActionBar">
        <item name="suggestionRowLayout">@layout/suggested_word</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" >
        <item name="searchViewStyle">@style/AppTheme.SearchViewStyle</item>
    </style>

    <style name="AppAlertDialog" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/dialog_accent</item>
    </style>

    <style name="AppPopupMenuHeader" parent="TextAppearance.AppCompat.Widget.PopupMenu.Header">
        <item name="android:textColor">@color/dialog_accent</item>
    </style>

    <style name="AboutActivityItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:autoLink">all</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textColorLink">@color/primary</item>
    </style>
    <style name="AboutActivitySubItem" parent="AboutActivityItem">
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:layout_marginStart" tools:targetApi="jelly_bean_mr1">24dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textColorLink">@color/primary</item>
    </style>
</resources>
